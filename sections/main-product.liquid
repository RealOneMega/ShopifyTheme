<section class="section section--background" data-product-handle="{{ product.handle }}" style="{% render 'section-background-style', section: section %}">
  {% render 'section-background-media', section: section %}
  <div class="container">
    {% assign color_option = nil %}
    {% assign size_option = nil %}
    {% for option in product.options_with_values %}
      {% assign option_name = option.name | downcase %}
      {% if color_option == nil %}
        {% if option_name contains 'color' or option_name contains 'colour' %}
          {% assign color_option = option %}
        {% endif %}
      {% endif %}
      {% if size_option == nil and option_name contains 'size' %}
        {% assign size_option = option %}
      {% endif %}
    {% endfor %}

    <div class="product-page">
      <div class="product-gallery" data-product-gallery>
        <div class="product-gallery__stage">
          {% for media in product.media %}
            <div class="product-gallery__item{% if forloop.first %} is-active{% endif %}" data-gallery-item data-media-id="{{ media.id }}">
              {{ media | media_tag: image_size: '900x', loading: 'lazy' }}
            </div>
          {% endfor %}
          <div class="product-gallery__controls">
            <button class="product-gallery__arrow" type="button" data-gallery-prev aria-label="Previous image">‹</button>
            <button class="product-gallery__arrow" type="button" data-gallery-next aria-label="Next image">›</button>
          </div>
        </div>
        <div class="product-gallery__thumbs" data-gallery-thumbs>
          {% for media in product.media %}
            <button class="product-gallery__thumb{% if forloop.first %} is-selected{% endif %}" type="button" data-gallery-thumb data-media-id="{{ media.id }}" aria-label="View image {{ forloop.index }}">
              {{ media | image_url: width: 120 | image_tag: loading: 'lazy', alt: media.alt | default: product.title }}
            </button>
          {% endfor %}
        </div>
      </div>
      <div class="product-details stack">
        <h1 class="heading">{{ product.title }}</h1>
        {% assign product_subtitle = product.metafields.custom.product_subtitle %}
        {% if product_subtitle != blank %}
          <p class="product-subtitle">{{ product_subtitle.value | escape }}</p>
        {% endif %}
        <div class="product-price">
          {% render 'price', product: product %}
        </div>
        {% if section.settings.show_inventory and product.available %}
          <p>In stock: {{ product.inventory_quantity }}</p>
        {% endif %}

        {% assign size_fit = product.metafields.custom.size_fit %}
        {% if size_fit == blank %}
          {% assign size_fit = product.metafields.custom.size_and_fit %}
        {% endif %}
        {% assign details_materials = product.metafields.custom.details_materials %}
        {% if details_materials == blank %}
          {% assign details_materials = product.metafields.custom.details_and_materials %}
        {% endif %}
        {% assign shipping_returns = product.metafields.custom.shipping_returns %}
        {% if shipping_returns == blank %}
          {% assign shipping_returns = product.metafields.custom.shipping_and_returns %}
        {% endif %}
        {% assign size_chart = product.metafields.custom.size_chart %}
        {% if size_chart == blank %}
          {% assign size_chart = product.metafields.custom.size_chart_image %}
        {% endif %}

        <form method="post" action="/cart/add" class="product-form" data-product-form data-ajax-cart {% if color_option %}data-color-position="{{ color_option.position }}"{% endif %} {% if size_option %}data-size-position="{{ size_option.position }}"{% endif %} data-product-handle="{{ product.handle }}">
          {% if product.has_only_default_variant %}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          {% else %}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" data-variant-id>
            {% if color_option %}
              {% assign color_index = color_option.position | minus: 1 %}
              <div class="product-option">
                <div class="product-option__header">
                  <span class="label">{{ color_option.name }}</span>
                  <span class="product-option__value" data-color-label>{{ product.selected_or_first_available_variant.options[color_index] }}</span>
                </div>
                <div class="product-color-swatches" data-color-swatches>
                  {% for value in color_option.values %}
                    {% assign swatch_color = value %}
                    {% if value contains '#' %}
                      {% assign swatch_color = value %}
                    {% else %}
                      {% assign swatch_color = value | downcase %}
                    {% endif %}
                    <button
                      class="product-color-swatch{% if value == product.selected_or_first_available_variant.options[color_index] %} is-selected{% endif %}"
                      type="button"
                      data-option-value="{{ value | escape }}"
                      aria-pressed="{% if value == product.selected_or_first_available_variant.options[color_index] %}true{% else %}false{% endif %}"
                      style="--swatch-color: {{ swatch_color }};"
                    >
                      <span class="visually-hidden">{{ value }}</span>
                    </button>
                  {% endfor %}
                </div>
              </div>
            {% endif %}

            {% if size_option %}
              {% assign size_index = size_option.position | minus: 1 %}
              <div class="product-option">
                <div class="product-option__header">
                  <label class="label" for="SizeSelect">{{ size_option.name }}</label>
                  {% if size_chart != blank %}
                    <button class="button button--tertiary" type="button" data-drawer-open="#size-chart-drawer" aria-haspopup="dialog">Size chart</button>
                  {% endif %}
                </div>
                <select id="SizeSelect" class="select product-size-select" data-option-position="{{ size_option.position }}">
                  {% for value in size_option.values %}
                    <option value="{{ value }}" {% if value == product.selected_or_first_available_variant.options[size_index] %}selected{% endif %}>
                      {{ value }}
                    </option>
                  {% endfor %}
                </select>
              </div>
            {% endif %}

            {% for option in product.options_with_values %}
              {% if option != color_option and option != size_option %}
                {% assign option_index = option.position | minus: 1 %}
                <div class="product-option">
                  <label class="label" for="OptionSelect{{ option.position }}">{{ option.name }}</label>
                  <select id="OptionSelect{{ option.position }}" class="select product-option-select" data-option-position="{{ option.position }}">
                    {% for value in option.values %}
                      <option value="{{ value }}" {% if value == product.selected_or_first_available_variant.options[option_index] %}selected{% endif %}>
                        {{ value }}
                      </option>
                    {% endfor %}
                  </select>
                </div>
              {% endif %}
            {% endfor %}
          {% endif %}
          <button class="button button--primary" type="submit">Add to cart</button>
          <button class="button button--secondary" type="button" data-wishlist-add aria-pressed="false">Save to wishlist</button>
        </form>

        <div class="product-info-tabs" data-product-info-tabs>
          <div class="product-info-tabs__nav" role="tablist" aria-label="Product information">
            <button class="product-info-tabs__tab is-active" type="button" role="tab" aria-selected="true" aria-controls="product-tab-description" data-product-tab-trigger data-product-tab-id="product-tab-description">Description</button>
            <button class="product-info-tabs__tab" type="button" role="tab" aria-selected="false" aria-controls="product-tab-size" data-product-tab-trigger data-product-tab-id="product-tab-size">Size &amp; Fit</button>
            <button class="product-info-tabs__tab" type="button" role="tab" aria-selected="false" aria-controls="product-tab-details" data-product-tab-trigger data-product-tab-id="product-tab-details">Details &amp; Materials</button>
            <button class="product-info-tabs__tab" type="button" role="tab" aria-selected="false" aria-controls="product-tab-shipping" data-product-tab-trigger data-product-tab-id="product-tab-shipping">Shipping &amp; Returns</button>
          </div>
          <div class="product-info-tabs__panels">
            <div id="product-tab-description" class="product-info-tabs__panel" role="tabpanel" data-product-tab-panel>
              {% if product.description != blank %}
                <div class="rte">{{ product.description }}</div>
              {% else %}
                <p>Add a product description to help customers understand fit, fabric, and care.</p>
              {% endif %}
            </div>
            <div id="product-tab-size" class="product-info-tabs__panel hidden" role="tabpanel" data-product-tab-panel>
              {% if size_fit != blank %}
                {{ size_fit | metafield_tag }}
              {% else %}
                <p>Add “Size &amp; Fit” content in your product metafields.</p>
              {% endif %}
              {% if size_chart != blank %}
                <button class="button button--secondary" type="button" data-drawer-open="#size-chart-drawer" aria-haspopup="dialog">View size chart</button>
              {% endif %}
            </div>
            <div id="product-tab-details" class="product-info-tabs__panel hidden" role="tabpanel" data-product-tab-panel>
              {% if details_materials != blank %}
                {{ details_materials | metafield_tag }}
              {% else %}
                <p>Add “Details &amp; Materials” content in your product metafields.</p>
              {% endif %}
            </div>
            <div id="product-tab-shipping" class="product-info-tabs__panel hidden" role="tabpanel" data-product-tab-panel>
              {% if shipping_returns != blank %}
                {{ shipping_returns | metafield_tag }}
              {% else %}
                <div class="stack">
                  <p>{{ section.settings.shipping_text }}</p>
                  <p>{{ section.settings.returns_text }}</p>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>

    <div style="margin-top:3rem;">
      <h2 class="heading">Reviews</h2>
      <div data-review-app>
        <p>{{ section.settings.review_placeholder }}</p>
        <button class="button button--secondary">Write a review</button>
      </div>
    </div>

    <div style="margin-top:3rem;">
      <h2 class="heading">Recommended for you</h2>
      <div class="product-grid">
        {% for product in recommendations.products limit: 4 %}
          {% render 'product-card', product: product, style: 'below' %}
        {% endfor %}
      </div>
    </div>

    <div class="sticky-atc" data-sticky-atc aria-hidden="true">
      <div class="sticky-atc__inner">
        <div class="sticky-atc__meta">
          <div class="sticky-atc__title">{{ product.title }}</div>
          <div class="sticky-atc__price">{% render 'price', product: product %}</div>
        </div>
        <form method="post" action="/cart/add" data-ajax-cart>
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" data-sticky-atc-variant>
          <button class="button button--primary" type="submit">Add to cart</button>
        </form>
      </div>
    </div>
  </div>
</section>

{% if size_chart != blank %}
  <div id="size-chart-drawer" class="drawer" role="dialog" aria-modal="true" aria-label="Size chart">
    <div class="drawer__header">
      <strong>Size chart</strong>
      <button class="header__icon-button" type="button" data-drawer-close aria-label="Close size chart">{% render 'icon-close' %}</button>
    </div>
    <div class="drawer__content">
      {% if size_chart.type == 'file_reference' %}
        {% assign chart_file = size_chart.value %}
        {% if chart_file.preview_image != blank %}
          {{ chart_file.preview_image | image_url: width: 1400 | image_tag: loading: 'lazy', alt: chart_file.alt | default: 'Size chart' }}
        {% elsif chart_file.url != blank %}
          <a class="button button--secondary" href="{{ chart_file.url }}">Download size chart</a>
        {% endif %}
      {% else %}
        {{ size_chart | metafield_tag }}
      {% endif %}
    </div>
  </div>
{% endif %}

<script type="application/json" data-product-variants>
  {{ product.variants | json }}
</script>

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "{{ product.title | escape }}",
    "image": [
      {% for media in product.media limit: 3 %}"{{ media | image_url: width: 800 }}"{% unless forloop.last %},{% endunless %}{% endfor %}
    ],
    "description": "{{ product.description | strip_html | escape }}",
    "sku": "{{ product.selected_or_first_available_variant.sku }}",
    "brand": {
      "@type": "Brand",
      "name": "{{ product.vendor | escape }}"
    },
    "offers": {
      "@type": "Offer",
      "priceCurrency": "{{ cart.currency.iso_code }}",
      "price": "{{ product.price | money_without_currency }}",
      "availability": "https://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}",
      "url": "{{ product.url }}"
    }
  }
</script>

{% schema %}
{
  "name": "Main product",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_inventory",
      "label": "Show inventory messaging",
      "default": true
    },
    {
      "type": "textarea",
      "id": "shipping_text",
      "label": "Shipping text",
      "default": "Fast shipping worldwide."
    },
    {
      "type": "textarea",
      "id": "returns_text",
      "label": "Returns text",
      "default": "30-day returns on unused items."
    },
    {
      "type": "textarea",
      "id": "review_placeholder",
      "label": "Review placeholder",
      "default": "Install your preferred review app to display reviews here."
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "select",
      "id": "background_type",
      "label": "Background type",
      "default": "none",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "color",
          "label": "Solid color"
        },
        {
          "value": "gradient",
          "label": "Gradient"
        },
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "video",
          "label": "Video"
        }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color_background",
      "id": "background_gradient",
      "label": "Background gradient"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "video",
      "id": "background_video",
      "label": "Background video"
    },
    {
      "type": "range",
      "id": "background_position_x",
      "label": "Background position horizontal",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 50
    },
    {
      "type": "range",
      "id": "background_position_y",
      "label": "Background position vertical",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 50
    },
    {
      "type": "select",
      "id": "background_size",
      "label": "Background size",
      "default": "cover",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        }
      ]
    },
    {
      "type": "select",
      "id": "background_repeat",
      "label": "Background repeat",
      "default": "no-repeat",
      "options": [
        {
          "value": "no-repeat",
          "label": "No repeat"
        },
        {
          "value": "repeat",
          "label": "Repeat"
        },
        {
          "value": "repeat-x",
          "label": "Repeat horizontally"
        },
        {
          "value": "repeat-y",
          "label": "Repeat vertically"
        }
      ]
    }
  ]
}
{% endschema %}
