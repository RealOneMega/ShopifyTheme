{% if section.settings.enable %}
  <div class="popup" data-popup data-popup='{"id":"{{ section.id }}","trigger":"{{ section.settings.trigger }}","delay":{{ section.settings.delay }},"scroll":{{ section.settings.scroll }} }'>
    <div class="popup__panel" role="dialog" aria-modal="true" aria-label="Newsletter">
      <button class="popup__close" type="button" data-popup-close aria-label="Close">{% render 'icon-close' %}</button>
      <div class="stack">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 640 | image_tag: loading: 'lazy' }}
        {% endif %}
        <h2 class="heading">{{ section.settings.heading }}</h2>
        <p>{{ section.settings.subheading }}</p>
        {% if section.settings.gdpr_text != blank %}
          <small>{{ section.settings.gdpr_text }}</small>
        {% endif %}
        {% form 'customer', id: 'PopupNewsletter' %}
          {% if form.posted_successfully? %}
            <p>Thanks for subscribing!</p>
          {% elsif form.errors %}
            <p role="alert">{{ form.errors | default_errors }}</p>
          {% endif %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <input type="email" name="contact[email]" placeholder="Email address" aria-label="Email address" required>
          <button class="button button--{{ section.settings.button_style }}" type="submit">{{ section.settings.button_label }}</button>
        {% endform %}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Newsletter popup",
  "settings": [
    {"type": "checkbox", "id": "enable", "label": "Enable popup", "default": false},
    {
      "type": "select",
      "id": "trigger",
      "label": "Trigger",
      "default": "delay",
      "options": [
        {"value": "delay", "label": "After delay"},
        {"value": "scroll", "label": "On scroll"},
        {"value": "exit", "label": "Exit intent"},
        {"value": "manual", "label": "Manual only"}
      ]
    },
    {"type": "range", "id": "delay", "label": "Delay (seconds)", "min": 2, "max": 30, "step": 1, "default": 6},
    {"type": "range", "id": "scroll", "label": "Scroll percent", "min": 10, "max": 90, "step": 5, "default": 40},
    {"type": "image_picker", "id": "image", "label": "Image"},
    {"type": "text", "id": "heading", "label": "Heading", "default": "Join the club"},
    {"type": "textarea", "id": "subheading", "label": "Subheading", "default": "Get first access to new drops."},
    {"type": "textarea", "id": "gdpr_text", "label": "GDPR text", "default": "By signing up you agree to receive emails."},
    {"type": "text", "id": "button_label", "label": "Button label", "default": "Subscribe"},
    {
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "default": "primary",
      "options": [
        {"value": "primary", "label": "Primary"},
        {"value": "secondary", "label": "Secondary"}
      ]
    }
  ]
}
{% endschema %}
