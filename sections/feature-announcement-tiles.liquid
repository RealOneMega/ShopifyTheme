    {
      "type": "range",
      "id": "background_position_y",
      "label": "Background position vertical",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 50
    },
    {
      "type": "select",
      "id": "background_size",
