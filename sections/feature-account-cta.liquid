<section class="section feature feature--account-cta" data-feature="account-cta">
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    <div class="account-cta">
      <p>{{ section.settings.text }}</p>
      <div class="account-cta__actions">
        <a class="button" href="{{ routes.account_login_url }}">{{ section.settings.login_label }}</a>
        <a class="button" href="{{ routes.account_register_url }}">{{ section.settings.signup_label }}</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Account CTA",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Account CTA"},
    {"type": "text", "id": "subheading", "label": "Subheading"},
    {"type": "textarea", "id": "text", "label": "Text", "default": "Create an account to track orders."},
    {"type": "text", "id": "login_label", "label": "Login label", "default": "Log in"},
    {"type": "text", "id": "signup_label", "label": "Signup label", "default": "Sign up"}
  ],
  "presets": [
    {"name": "Account CTA", "category": "Accounts"}
  ]
}
{% endschema %}
