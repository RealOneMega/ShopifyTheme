<section class="section feature feature--video-review" data-feature="video-review">
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    <div class="video-reviews">
      {% for block in section.blocks %}
        <div class="video-review">
          {% if block.settings.video_url != blank %}
            <video controls>
              <source src="{{ block.settings.video_url }}" type="video/mp4">
            </video>
          {% endif %}
          <p>{{ block.settings.caption }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Video reviews",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Video reviews"},
    {"type": "text", "id": "subheading", "label": "Subheading"}],
  "blocks": [
    {
      "type": "video",
      "name": "Video review",
      "settings": [
        {"type": "text", "id": "video_url", "label": "Video URL (mp4)"},
        {"type": "text", "id": "caption", "label": "Caption"}
      ]
    }
  ],
  "presets": [
    {"name": "Video reviews", "category": "Video"}
  ]
}
{% endschema %}
