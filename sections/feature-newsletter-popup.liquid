<section class="popup feature feature--newsletter-popup" data-feature="newsletter-popup" data-popup='{"id":"newsletter-newsletter-popup-{{ section.id }}","trigger":"delay","delay":{{ section.settings.delay }} }'>
  <div class="popup__content">
    <button class="popup__close" type="button" data-popup-close aria-label="Close">Ã—</button>
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.text }}</p>
    <form class="newsletter">
      <input class="input" type="email" placeholder="you@example.com" required>
      <button class="button" type="submit">{{ section.settings.button_label }}</button>
    </form>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter popup",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Join our list"},
    {"type": "textarea", "id": "text", "label": "Text", "default": "Get updates and offers."},
    {"type": "text", "id": "button_label", "label": "Button label", "default": "Subscribe"},
    {"type": "range", "id": "delay", "label": "Delay (seconds)", "min": 1, "max": 30, "step": 1, "default": 5}
  ],
  "presets": [
    {"name": "Newsletter popup", "category": "Marketing"}
  ]
}
{% endschema %}
