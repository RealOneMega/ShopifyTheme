<section class="section" data-collection-tabs>
  <div class="container">
    <div class="stack">
      <h2 class="heading">{{ section.settings.heading }}</h2>
      <div style="display:flex;gap:1rem;flex-wrap:wrap;">
        {% for block in section.blocks %}
          <button class="button button--tertiary" data-tab-trigger data-tab-id="tab-{{ block.id }}" aria-controls="tab-{{ block.id }}">{{ block.settings.label }}</button>
        {% endfor %}
      </div>
      {% for block in section.blocks %}
        <div id="tab-{{ block.id }}" data-tab-panel {% if forloop.first == false %}class="hidden"{% endif %}>
          <div class="product-grid">
            {% assign tab_collection = collections[block.settings.collection] %}
            {% for product in tab_collection.products limit: section.settings.limit %}
              {% render 'product-card', product: product, style: section.settings.card_style %}
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection tabs",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Shop by collection"},
    {"type": "range", "id": "limit", "label": "Products to show", "min": 4, "max": 8, "step": 1, "default": 4},
    {
      "type": "select",
      "id": "card_style",
      "label": "Card style",
      "default": "below",
      "options": [
        {"value": "below", "label": "Info below image"},
        {"value": "overlay", "label": "Overlay info"}
      ]
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection tab",
      "settings": [
        {"type": "text", "id": "label", "label": "Tab label", "default": "Featured"},
        {"type": "collection", "id": "collection", "label": "Collection"}
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {"name": "Collection tabs", "category": "Collection"}
  ]
}
{% endschema %}
