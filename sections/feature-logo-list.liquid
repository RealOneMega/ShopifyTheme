<section class="section feature feature--logo-list" data-feature="logo-list">
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    <div class="logo-list">
      {% for block in section.blocks %}
        <a class="logo-list__item" href="{{ block.settings.link | default: '#' }}">
          {% if block.settings.logo != blank %}
            <img src="{{ block.settings.logo | image_url: width: 200 }}" alt="{{ block.settings.logo.alt | escape }}">
          {% else %}
            <span>{{ block.settings.label }}</span>
          {% endif %}
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Logo list",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Logo list"},
    {"type": "text", "id": "subheading", "label": "Subheading"}],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {"type": "image_picker", "id": "logo", "label": "Logo"},
        {"type": "text", "id": "label", "label": "Label", "default": "Brand"},
        {"type": "url", "id": "link", "label": "Link"}
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {"name": "Logo list", "category": "Brand"}
  ]
}
{% endschema %}
