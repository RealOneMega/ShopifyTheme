<section class="section">
  <div class="container text-center">
    <div class="stack">
      <h2 class="heading">{{ section.settings.heading }}</h2>
      <div>{{ section.settings.text }}</div>
      {% if section.settings.button_label != blank %}
        <a class="button button--{{ section.settings.button_style }}" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rich text",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Tell your story"},
    {"type": "richtext", "id": "text", "label": "Text", "default": "<p>Share brand values and product benefits.</p>"},
    {"type": "text", "id": "button_label", "label": "Button label"},
    {"type": "url", "id": "button_link", "label": "Button link"},
    {
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "default": "primary",
      "options": [
        {"value": "primary", "label": "Primary"},
        {"value": "secondary", "label": "Secondary"},
        {"value": "tertiary", "label": "Tertiary"}
      ]
    }
  ],
  "presets": [
    {"name": "Rich text", "category": "Text"}
  ]
}
{% endschema %}
