<section class="section feature feature--free-shipping-bar" data-feature="free-shipping-bar">
  <div class="container">
    <header class="section__header">
      {% if section.settings.heading != blank %}
        <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="section__description">{{ section.settings.description }}</p>
      {% endif %}
    </header>
    <div class="feature__body" data-feature-body>
      {% if section.settings.body != blank %}
        <div class="feature__richtext">{{ section.settings.body }}</div>
      {% endif %}
      <div class="feature__preview" data-feature-preview>
        <div class="feature__progress" data-free-shipping-bar>
          <span>$20 away from free shipping</span>
          <div class="feature__progress-track"><div class="feature__progress-fill" style="width:40%;"></div></div>
        </div>
      </div>
      {% if section.settings.button_label != blank %}
        <a class="button" href="{{ section.settings.button_link | default: '#' }}" data-feature-action>
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Feature: Free shipping bar",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Free shipping bar"},
    {"type": "textarea", "id": "description", "label": "Description", "default": "Progress bar to free shipping."},
    {"type": "richtext", "id": "body", "label": "Body"},
    {"type": "text", "id": "button_label", "label": "Button label"},
    {"type": "url", "id": "button_link", "label": "Button link"}
  ],
  "presets": [
    {"name": "Feature: Free shipping bar", "category": "Features"}
  ]
}
{% endschema %}
