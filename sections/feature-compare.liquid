<section class="section feature feature--compare" data-feature="compare">
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    <table class="compare-table">
      <thead>
        <tr>
          <th>Product</th>
          {% for block in section.blocks %}
            {% assign product = block.settings.product %}
            {% if product != blank %}
              <th>{{ product.title }}</th>
            {% endif %}
          {% endfor %}
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Price</td>
          {% for block in section.blocks %}
            {% assign product = block.settings.product %}
            {% if product != blank %}
              <td>{{ product.price | money }}</td>
            {% endif %}
          {% endfor %}
        </tr>
        <tr>
          <td>Vendor</td>
          {% for block in section.blocks %}
            {% assign product = block.settings.product %}
            {% if product != blank %}
              <td>{{ product.vendor }}</td>
            {% endif %}
          {% endfor %}
        </tr>
        <tr>
          <td>Availability</td>
          {% for block in section.blocks %}
            {% assign product = block.settings.product %}
            {% if product != blank %}
              <td>{% if product.available %}In stock{% else %}Out of stock{% endif %}</td>
            {% endif %}
          {% endfor %}
        </tr>
      </tbody>
    </table>
  </div>
</section>

{% schema %}
{
  "name": "Compare products",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Compare products"},
    {"type": "text", "id": "subheading", "label": "Subheading"}],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {"type": "product", "id": "product", "label": "Product"}
      ]
    }
  ],
  "presets": [
    {"name": "Compare products", "category": "Product"}
  ]
}
{% endschema %}
