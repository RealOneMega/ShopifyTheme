<section class="section footer">
  <div class="container">
    <div class="footer__grid">
      <div class="stack">
        {% if section.settings.logo != blank %}
          {{ section.settings.logo | image_url: width: 220 | image_tag: loading: 'lazy' }}
        {% endif %}
        {% if section.settings.text != blank %}
          <p>{{ section.settings.text }}</p>
        {% endif %}
        <div style="display:flex;gap:0.5rem;">
          {% if settings.social_facebook != blank %}<a href="{{ settings.social_facebook }}" aria-label="Facebook">{% render 'icon-facebook' %}</a>{% endif %}
          {% if settings.social_instagram != blank %}<a href="{{ settings.social_instagram }}" aria-label="Instagram">{% render 'icon-instagram' %}</a>{% endif %}
          {% if settings.social_tiktok != blank %}<a href="{{ settings.social_tiktok }}" aria-label="TikTok">{% render 'icon-tiktok' %}</a>{% endif %}
          {% if settings.social_twitter != blank %}<a href="{{ settings.social_twitter }}" aria-label="Twitter">{% render 'icon-twitter' %}</a>{% endif %}
        </div>
      </div>
      {% for block in section.blocks %}
        {% if block.type == 'menu' %}
          <div>
            <strong>{{ block.settings.heading }}</strong>
            <div class="stack" style="margin-top:0.75rem;">
              {% for link in linklists[block.settings.menu].links %}
                <a href="{{ link.url }}">{{ link.title }}</a>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
      <div>
        <strong>{{ section.settings.newsletter_heading }}</strong>
        <div style="margin-top:0.75rem;">
          {% form 'customer', id: 'ContactFooter' %}
            {% if form.posted_successfully? %}
              <p>Thanks for subscribing!</p>
            {% elsif form.errors %}
              <p role="alert">{{ form.errors | default_errors }}</p>
            {% endif %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input type="email" name="contact[email]" placeholder="Email address" aria-label="Email address" required>
            <button class="button button--primary" type="submit">Subscribe</button>
          {% endform %}
        </div>
      </div>
    </div>
    <div class="footer__bottom">
      <span>&copy; {{ 'now' | date: '%Y' }} {{ section.settings.copyright }}</span>
      {% if section.settings.show_payments %}
        <div style="display:flex;gap:0.5rem;flex-wrap:wrap;">
          {{ shop.enabled_payment_types | payment_type_svg_tag }}
        </div>
      {% endif %}
      {% if section.settings.show_back_to_top %}
        <a class="button button--tertiary" href="#MainContent">Back to top</a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {"type": "image_picker", "id": "logo", "label": "Logo"},
    {"type": "textarea", "id": "text", "label": "Text"},
    {"type": "text", "id": "newsletter_heading", "label": "Newsletter heading", "default": "Stay in the loop"},
    {"type": "text", "id": "copyright", "label": "Copyright text", "default": "All rights reserved."},
    {"type": "checkbox", "id": "show_payments", "label": "Show payment icons", "default": true},
    {"type": "checkbox", "id": "show_back_to_top", "label": "Show back to top", "default": true}
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu column",
      "settings": [
        {"type": "text", "id": "heading", "label": "Heading", "default": "Shop"},
        {"type": "link_list", "id": "menu", "label": "Menu"}
      ]
    }
  ],
  "max_blocks": 4
}
{% endschema %}
