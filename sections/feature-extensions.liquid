<section class="section">
  <div class="container">
    {% for block in section.blocks %}
      {% case block.settings.feature_type %}
        {% when 'sticky_atc' %}
          <div data-sticky-atc class="product-card" style="padding:1.5rem;">
            <strong>Sticky add to cart</strong>
            <p>Enable a sticky add-to-cart bar on product pages.</p>
          </div>
        {% when 'buy_now' %}
          <div data-buy-now class="product-card" style="padding:1.5rem;">
            <strong>Buy now toggle</strong>
            <p>Show accelerated checkout button on product pages.</p>
          </div>
        {% when 'back_in_stock' %}
          <div data-back-in-stock class="product-card" style="padding:1.5rem;">
            <strong>Back-in-stock alerts</strong>
            <p>Collect emails for out-of-stock items.</p>
          </div>
        {% when 'size_chart' %}
          <div data-size-chart class="product-card" style="padding:1.5rem;">
            <strong>Size chart modal</strong>
            <p>Provide size guidance per product.</p>
          </div>
        {% when 'shipping_returns_modal' %}
          <div data-shipping-returns class="product-card" style="padding:1.5rem;">
            <strong>Shipping & returns modal</strong>
            <p>Show policies in a modal drawer.</p>
          </div>
        {% when 'trust_badges' %}
          <div data-trust-badges class="product-card" style="padding:1.5rem;">
            <strong>Trust badges row</strong>
            <p>Show secure checkout, guarantees, and support badges.</p>
          </div>
        {% when 'quantity_breaks' %}
          <div data-quantity-breaks class="product-card" style="padding:1.5rem;">
            <strong>Quantity breaks</strong>
            <p>Display tiered pricing per quantity.</p>
          </div>
        {% when 'upsell_cart' %}
          <div data-cart-upsell class="product-card" style="padding:1.5rem;">
            <strong>Cart upsell</strong>
            <p>Recommend complementary products in cart.</p>
          </div>
        {% when 'recently_viewed' %}
          <div data-recently-viewed class="product-card" style="padding:1.5rem;">
            <strong>Recently viewed</strong>
            <p>Surface products visitors recently viewed.</p>
          </div>
        {% when 'social_proof' %}
          <div data-social-proof class="product-card" style="padding:1.5rem;">
            <strong>Social proof</strong>
            <p>Show live sales or review highlights.</p>
          </div>
        {% when 'zoom' %}
          <div data-zoom class="product-card" style="padding:1.5rem;">
            <strong>Image zoom</strong>
            <p>Enable hover/pinch zoom on product images.</p>
          </div>
        {% when 'variant_images' %}
          <div data-variant-images class="product-card" style="padding:1.5rem;">
            <strong>Variant image switching</strong>
            <p>Swap media when variants change.</p>
          </div>
        {% when 'compare' %}
          <div data-compare class="product-card" style="padding:1.5rem;">
            <strong>Compare products</strong>
            <p>Allow customers to compare products.</p>
          </div>
        {% when 'quick_view' %}
          <div data-quick-view class="product-card" style="padding:1.5rem;">
            <strong>Quick view modal</strong>
            <p>Preview products without leaving collection.</p>
          </div>
        {% when 'quick_add' %}
          <div data-quick-add class="product-card" style="padding:1.5rem;">
            <strong>Quick add</strong>
            <p>Add products to cart from list pages.</p>
          </div>
        {% when 'collection_banner' %}
          <div data-collection-banner class="product-card" style="padding:1.5rem;">
            <strong>Collection banner</strong>
            <p>Hero banner for collection pages.</p>
          </div>
        {% when 'collection_filters' %}
          <div data-collection-filters class="product-card" style="padding:1.5rem;">
            <strong>Advanced filters</strong>
            <p>Facet filters and sort controls.</p>
          </div>
        {% when 'search_enhanced' %}
          <div data-search-enhanced class="product-card" style="padding:1.5rem;">
            <strong>Enhanced search</strong>
            <p>Live search with result categories.</p>
          </div>
        {% when 'search_no_results' %}
          <div data-search-no-results class="product-card" style="padding:1.5rem;">
            <strong>No-results suggestions</strong>
            <p>Suggest popular items when no matches.</p>
          </div>
        {% when 'countdown' %}
          <div data-countdown class="product-card" style="padding:1.5rem;">
            <strong>Countdown timer</strong>
            <p>Display time-limited offers.</p>
          </div>
        {% when 'hotspots' %}
          <div data-hotspots class="product-card" style="padding:1.5rem;">
            <strong>Shoppable hotspots</strong>
            <p>Clickable product hotspots on images.</p>
          </div>
        {% when 'before_after' %}
          <div data-before-after class="product-card" style="padding:1.5rem;">
            <strong>Before/after slider</strong>
            <p>Compare two images with a slider.</p>
          </div>
        {% when 'video_banner' %}
          <div data-video-banner class="product-card" style="padding:1.5rem;">
            <strong>Video banner</strong>
            <p>Background video hero support.</p>
          </div>
        {% when 'announcement_tiles' %}
          <div data-announcement-tiles class="product-card" style="padding:1.5rem;">
            <strong>Announcement tiles</strong>
            <p>Multi-tile promo blocks.</p>
          </div>
        {% when 'newsletter_popup' %}
          <div data-newsletter-popup class="product-card" style="padding:1.5rem;">
            <strong>Newsletter popup</strong>
            <p>Timed/exit-intent newsletter capture.</p>
          </div>
        {% when 'promo_bar' %}
          <div data-promo-bar class="product-card" style="padding:1.5rem;">
            <strong>Promo bar</strong>
            <p>Sticky or rotating promo messages.</p>
          </div>
        {% when 'rewards_ui' %}
          <div data-rewards-ui class="product-card" style="padding:1.5rem;">
            <strong>Rewards UI</strong>
            <p>Points balance and redemption UI.</p>
          </div>
        {% when 'reviews_block' %}
          <div data-reviews-block class="product-card" style="padding:1.5rem;">
            <strong>Reviews block</strong>
            <p>Integrated reviews placement.</p>
          </div>
        {% when 'sticky_filters' %}
          <div data-sticky-filters class="product-card" style="padding:1.5rem;">
            <strong>Sticky filters</strong>
            <p>Keep filters visible while scrolling.</p>
          </div>
        {% when 'filter_drawer' %}
          <div data-filter-drawer class="product-card" style="padding:1.5rem;">
            <strong>Filter drawer (mobile)</strong>
            <p>Mobile filter modal/drawer.</p>
          </div>
        {% when 'breadcrumb' %}
          <div data-breadcrumb class="product-card" style="padding:1.5rem;">
            <strong>Breadcrumbs</strong>
            <p>SEO-friendly breadcrumb navigation.</p>
          </div>
        {% when 'faq_schema' %}
          <div data-faq-schema class="product-card" style="padding:1.5rem;">
            <strong>FAQ schema</strong>
            <p>Structured data for FAQs.</p>
          </div>
        {% when 'sticky_atc_mobile' %}
          <div data-sticky-atc-mobile class="product-card" style="padding:1.5rem;">
