<section class="section feature feature--search-no-results" data-feature="search-no-results">
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    <p>{{ section.settings.message }}</p>
    <div class="suggested-products">
      {% for block in section.blocks %}
        {% assign product = block.settings.product %}
        {% if product != blank %}
          <div class="product-card">
            <a href="{{ product.url }}">{{ product.title }}</a>
            <p>{{ product.price | money }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Search no-results",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Search no-results"},
    {"type": "text", "id": "subheading", "label": "Subheading"},
    {"type": "textarea", "id": "message", "label": "Message", "default": "No results found. Try these picks."}
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {"type": "product", "id": "product", "label": "Product"}
      ]
    }
  ],
  "presets": [
    {"name": "Search no-results", "category": "Search"}
  ]
}
{% endschema %}
