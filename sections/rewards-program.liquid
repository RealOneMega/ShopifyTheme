<section class="section">
  <div class="container">
    <div class="stack">
      <h2 class="heading">{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
      <div class="product-card" style="padding:1.5rem;">
        <strong>Your points</strong>
        {% if customer and customer.metafields.rewards.points != blank %}
          <p data-rewards-balance>{{ customer.metafields.rewards.points }}</p>
        {% else %}
          <p data-rewards-balance>0</p>
          <small>Connect your rewards app or set customer metafields.</small>
        {% endif %}
      </div>
      <div class="product-grid">
        <div class="product-card" style="padding:1.5rem;">
          <strong>Earn rules</strong>
          <p>{{ section.settings.earn_text }}</p>
        </div>
        <div class="product-card" style="padding:1.5rem;">
          <strong>Redeem options</strong>
          <ul>
            {% for block in section.blocks %}
              <li data-reward-option data-reward-value="{{ block.settings.points }}" data-reward-type="{{ block.settings.type }}">
                {{ block.settings.label }}
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
      <div data-rewards-actions>
        <button class="button button--secondary" data-reward-redeem>Redeem points</button>
        <p class="visually-hidden" data-rewards-integration>Integrate with a rewards app or Shopify Functions to generate discount codes.</p>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rewards program",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Rewards"},
    {"type": "textarea", "id": "subheading", "label": "Subheading", "default": "Earn points every time you shop."},
    {"type": "text", "id": "earn_text", "label": "Earn rules", "default": "$1 spent = 1 point"}
  ],
  "blocks": [
    {
      "type": "reward",
      "name": "Redeem option",
      "settings": [
        {"type": "text", "id": "label", "label": "Label", "default": "100 pts = $5 off"},
        {"type": "number", "id": "points", "label": "Points"},
        {
          "type": "select",
          "id": "type",
          "label": "Type",
          "default": "money",
          "options": [
            {"value": "money", "label": "Money off"},
            {"value": "shipping", "label": "Free shipping"}
          ]
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {"name": "Rewards program", "category": "Marketing"}
  ]
}
{% endschema %}
