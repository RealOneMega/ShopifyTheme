<section class="section">
  <div class="container text-center">
    <h2 class="heading">{{ section.settings.heading }}</h2>
    <div style="display:flex;flex-wrap:wrap;gap:1.5rem;justify-content:center;align-items:center;">
      {% for block in section.blocks %}
        {% if block.settings.logo != blank %}
          {{ block.settings.logo | image_url: width: 180 | image_tag: loading: 'lazy' }}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Logo list",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "As seen in"}
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {"type": "image_picker", "id": "logo", "label": "Logo"}
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {"name": "Logo list", "category": "Image"}
  ]
}
{% endschema %}
