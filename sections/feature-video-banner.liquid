<section class="section feature feature--video-banner" data-feature="video-banner">
  <div class="container">
    <div class="video-banner">
      {% if section.settings.video_url != blank %}
        <video controls poster="{{ section.settings.poster | image_url: width: 1200 }}">
          <source src="{{ section.settings.video_url }}" type="video/mp4">
        </video>
      {% endif %}
      <div class="video-banner__content">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
        {% if section.settings.button_label != blank %}
          <a class="button" href="{{ section.settings.button_link | default: '#' }}">{{ section.settings.button_label }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Video banner",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Video banner"},
    {"type": "text", "id": "subheading", "label": "Subheading"},
    {"type": "text", "id": "video_url", "label": "Video URL (mp4)"},
    {"type": "image_picker", "id": "poster", "label": "Poster image"},
    {"type": "text", "id": "button_label", "label": "Button label"},
    {"type": "url", "id": "button_link", "label": "Button link"}
  ],
  "presets": [
    {"name": "Video banner", "category": "Video"}
  ]
}
{% endschema %}
