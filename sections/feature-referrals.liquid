<section class="section feature feature--referrals" data-feature="referrals">
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    <p>{{ section.settings.text }}</p>
    <div class="referral">
      <input class="input" type="text" value="{{ section.settings.link }}" readonly>
      <button class="button" type="button" data-copy-button data-copy-text="{{ section.settings.link }}">Copy link</button>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Referrals",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Referrals"},
    {"type": "text", "id": "subheading", "label": "Subheading"},
    {"type": "textarea", "id": "text", "label": "Text", "default": "Share your referral link."},
    {"type": "text", "id": "link", "label": "Referral link", "default": "https://example.com"}
  ],
  "presets": [
    {"name": "Referrals", "category": "Marketing"}
  ]
}
{% endschema %}
