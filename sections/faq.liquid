<section class="section">
  <div class="container">
    <h2 class="heading">{{ section.settings.heading }}</h2>
    <div class="accordion" data-accordion>
      {% for block in section.blocks %}
        <div class="accordion__item">
          <button class="accordion__button" data-accordion-button aria-expanded="false">{{ block.settings.question }}</button>
          <div class="accordion__panel hidden">{{ block.settings.answer }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "FAQ"}
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ",
      "settings": [
        {"type": "text", "id": "question", "label": "Question", "default": "What is your return policy?"},
        {"type": "richtext", "id": "answer", "label": "Answer", "default": "<p>We accept returns within 30 days.</p>"}
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {"name": "FAQ", "category": "Text"}
  ]
}
{% endschema %}
