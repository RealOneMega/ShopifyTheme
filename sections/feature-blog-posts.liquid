<section class="section feature feature--blog-posts" data-feature="blog-posts">
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    {% assign selected_blog = blogs[section.settings.blog] %}
    {% if selected_blog != blank %}
      <div class="blog-grid">
        {% for article in selected_blog.articles limit: section.settings.limit %}
          <article class="blog-card">
            <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
            <p>{{ article.excerpt_or_content | strip_html | truncate: 120 }}</p>
          </article>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Blog posts",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Blog posts"},
    {"type": "text", "id": "subheading", "label": "Subheading"},
    {"type": "blog", "id": "blog", "label": "Blog"},
    {"type": "range", "id": "limit", "label": "Posts to show", "min": 1, "max": 6, "step": 1, "default": 3}
  ],
  "presets": [
    {"name": "Blog posts", "category": "Blog"}
  ]
}
{% endschema %}
