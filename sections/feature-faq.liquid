<section class="section feature feature--faq" data-feature="faq">
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    <div class="accordion" data-accordion>
      {% for block in section.blocks %}
        <div class="accordion__item">
          <button class="accordion__button" data-accordion-button aria-expanded="false">{{ block.settings.question }}</button>
          <div class="accordion__panel hidden">{{ block.settings.answer }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "FAQ"},
    {"type": "text", "id": "subheading", "label": "Subheading"}],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ",
      "settings": [
        {"type": "text", "id": "question", "label": "Question", "default": "What is your return policy?"},
        {"type": "richtext", "id": "answer", "label": "Answer", "default": "<p>We accept returns within 30 days.</p>"}
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {"name": "FAQ", "category": "Text"}
  ]
}
{% endschema %}
