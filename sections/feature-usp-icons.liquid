<section class="section feature feature--usp-icons" data-feature="usp-icons">
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    <div class="feature__list">
      {% for block in section.blocks %}
        <div class="feature__list-item">
          {% if block.settings.icon != blank %}
            <img src="{{ block.settings.icon | image_url: width: 80 }}" alt="{{ block.settings.icon.alt | escape }}">
          {% endif %}
          <div>
            <strong>{{ block.settings.title }}</strong>
            <p>{{ block.settings.text }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "USP icons",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "USP icons"},
    {"type": "text", "id": "subheading", "label": "Subheading"}],
  "blocks": [
    {
      "type": "item",
      "name": "USP",
      "settings": [
        {"type": "image_picker", "id": "icon", "label": "Icon"},
        {"type": "text", "id": "title", "label": "Title", "default": "USP"},
        {"type": "textarea", "id": "text", "label": "Text"}
      ]
    }
  ],
  "presets": [
    {"name": "USP icons", "category": "Marketing"}
  ]
}
{% endschema %}
