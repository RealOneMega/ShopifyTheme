<section class="section feature feature--sticky-atc" data-feature="sticky-atc">
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    <div class="feature__product">
      {% assign featured_product = section.settings.product %}
      {% if featured_product != blank %}
        {% form 'product', featured_product %}
          <div class="product-card">
            <h3 class="product-card__title">{{ featured_product.title }}</h3>
            {% if featured_product.featured_image != blank %}
              <img src="{{ featured_product.featured_image | image_url: width: 480 }}" alt="{{ featured_product.featured_image.alt | escape }}">
            {% endif %}
            <p class="price">{{ featured_product.price | money }}</p>
            {% if featured_product.has_only_default_variant == false %}
              <label class="label">Variant</label>
              <select name="id" class="select">
                {% for variant in featured_product.variants %}
                  <option value="{{ variant.id }}">{{ variant.title }}</option>
                {% endfor %}
              </select>
            {% else %}
              <input type="hidden" name="id" value="{{ featured_product.selected_or_first_available_variant.id }}">
            {% endif %}
            <label class="label">Quantity</label>
            <input class="input" type="number" name="quantity" value="1" min="1">
            <button class="button" type="submit">{{ section.settings.button_label }}</button>
          </div>
        {% endform %}
      {% else %}
        <p>Select a product to enable this feature.</p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Sticky add to cart",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Sticky add to cart"},
    {"type": "text", "id": "subheading", "label": "Subheading"},
    {"type": "product", "id": "product", "label": "Product"},
    {"type": "text", "id": "button_label", "label": "Button label", "default": "Add to cart"}
  ],
  "presets": [
    {"name": "Sticky add to cart", "category": "Features"}
  ]
}
{% endschema %}
