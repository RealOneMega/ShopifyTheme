<section class="section feature feature--email-capture" data-feature="email-capture">
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    <form class="feature__form" data-feature-form>
      <label class="label">Email</label>
      <input class="input" type="email" placeholder="Email" required>
      <button class="button" type="submit">{{ section.settings.button_label }}</button>
    </form>
  </div>
</section>

{% schema %}
{
  "name": "Email capture",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Email capture"},
    {"type": "text", "id": "subheading", "label": "Subheading"},
    {"type": "text", "id": "button_label", "label": "Button label", "default": "Notify me"}
  ],
  "presets": [
    {"name": "Email capture", "category": "Marketing"}
  ]
}
{% endschema %}
