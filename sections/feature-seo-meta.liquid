<section class="section feature feature--seo-meta" data-feature="seo-meta">
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    <p>{{ section.settings.description }}</p>
  </div>
  <script type="application/ld+json">{
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "{{ section.settings.org_name }}",
    "url": "{{ shop.url }}",
    "sameAs": [{% for block in section.blocks %}"{{ block.settings.url }}"{% unless forloop.last %}, {% endunless %}{% endfor %}]
  }</script>
</section>

{% schema %}
{
  "name": "SEO meta",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "SEO meta"},
    {"type": "text", "id": "subheading", "label": "Subheading"},
    {"type": "textarea", "id": "description", "label": "Description", "default": "Organization schema output."},
    {"type": "text", "id": "org_name", "label": "Organization name", "default": "Your brand"}
  ],
  "blocks": [
    {
      "type": "social",
      "name": "Social link",
      "settings": [
        {"type": "url", "id": "url", "label": "URL"}
      ]
    }
  ],
  "presets": [
    {"name": "SEO meta", "category": "SEO"}
  ]
}
{% endschema %}
