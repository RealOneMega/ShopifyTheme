<section class="section">
  <div class="container">
    <h2 class="heading">{{ section.settings.heading }}</h2>
    <div data-recently-viewed>
      <p>Recently viewed items will appear here.</p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Recently viewed",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Recently viewed"}
  ],
  "presets": [
    {"name": "Recently viewed", "category": "Product"}
  ]
}
{% endschema %}
