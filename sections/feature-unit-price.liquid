<section class="section feature feature--unit-price" data-feature="unit-price">
  <div class="container">
    <header class="section__header">
      {% if section.settings.heading != blank %}
        <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="section__description">{{ section.settings.description }}</p>
      {% endif %}
    </header>
    <div class="feature__body" data-feature-body>
      {% if section.settings.body != blank %}
        <div class="feature__richtext">{{ section.settings.body }}</div>
      {% endif %}
      <div class="feature__preview" data-feature-preview>
        <div class="feature__placeholder" data-feature-placeholder>Activate Unit pricing feature here.</div>
      </div>
      {% if section.settings.button_label != blank %}
        <a class="button" href="{{ section.settings.button_link | default: '#' }}" data-feature-action>
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Feature: Unit pricing",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Unit pricing"},
    {"type": "textarea", "id": "description", "label": "Description", "default": "Show unit pricing when applicable."},
    {"type": "richtext", "id": "body", "label": "Body"},
    {"type": "text", "id": "button_label", "label": "Button label"},
    {"type": "url", "id": "button_link", "label": "Button link"}
  ],
  "presets": [
    {"name": "Feature: Unit pricing", "category": "Features"}
  ]
}
{% endschema %}
