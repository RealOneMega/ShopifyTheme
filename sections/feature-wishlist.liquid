<section class="section feature feature--wishlist" data-feature="wishlist">
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    <div class="wishlist-grid">
      {% for block in section.blocks %}
        {% assign product = block.settings.product %}
        {% if product != blank %}
          <div class="product-card">
            <h3>{{ product.title }}</h3>
            <button class="button" type="button" data-wishlist-toggle="{{ product.handle }}">Save</button>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div data-wishlist-items></div>
  </div>
</section>

{% schema %}
{
  "name": "Wishlist",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Wishlist"},
    {"type": "text", "id": "subheading", "label": "Subheading"}],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {"type": "product", "id": "product", "label": "Product"}
      ]
    }
  ],
  "presets": [
    {"name": "Wishlist", "category": "Product"}
  ]
}
{% endschema %}
