<section class="section">
  <div class="container">
    <div class="stack">
      <h2 class="heading">{{ section.settings.heading }}</h2>
      {% if section.settings.blog != blank %}
        <div class="product-grid">
          {% for article in blogs[section.settings.blog].articles limit: section.settings.limit %}
            <article class="product-card">
              {% if article.image %}
                {{ article.image | image_url: width: 600 | image_tag: loading: 'lazy' }}
              {% endif %}
              <div class="product-card__info">
                <strong>{{ article.title }}</strong>
                <p>{{ article.excerpt_or_content | strip_html | truncate: 90 }}</p>
                <a class="button button--tertiary" href="{{ article.url }}">Read more</a>
              </div>
            </article>
          {% endfor %}
        </div>
      {% else %}
        <p>Select a blog.</p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Blog posts",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "From the journal"},
    {"type": "blog", "id": "blog", "label": "Blog"},
    {"type": "range", "id": "limit", "label": "Posts to show", "min": 2, "max": 6, "step": 1, "default": 3}
  ],
  "presets": [
    {"name": "Blog posts", "category": "Blog"}
  ]
}
{% endschema %}
