<section class="section feature feature--recently-purchased" data-feature="recently-purchased">
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    <ul class="social-proof">
      {% for block in section.blocks %}
        <li>{{ block.settings.text }}</li>
      {% endfor %}
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "Recently purchased",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Recently purchased"},
    {"type": "text", "id": "subheading", "label": "Subheading"}],
  "blocks": [
    {
      "type": "proof",
      "name": "Proof",
      "settings": [
        {"type": "text", "id": "text", "label": "Text", "default": "Someone just purchased this item."}
      ]
    }
  ],
  "presets": [
    {"name": "Recently purchased", "category": "Marketing"}
  ]
}
{% endschema %}
