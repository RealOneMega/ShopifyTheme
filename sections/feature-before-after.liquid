<section class="section feature feature--before-after" data-feature="before-after" data-before-after>
  <div class="container">
  {% if section.settings.heading != blank %}
    <header class="section__header">
      <h2 class="section__heading">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="section__description">{{ section.settings.subheading }}</p>
      {% endif %}
    </header>
  {% endif %}
    <div class="before-after">
      <div class="before-after__images" data-before-after-images>
        {% if section.settings.before_image != blank %}
          <img class="before-after__before" src="{{ section.settings.before_image | image_url: width: 800 }}" alt="{{ section.settings.before_image.alt | escape }}">
        {% endif %}
        {% if section.settings.after_image != blank %}
          <img class="before-after__after" src="{{ section.settings.after_image | image_url: width: 800 }}" alt="{{ section.settings.after_image.alt | escape }}">
        {% endif %}
      </div>
      <input type="range" min="0" max="100" value="50" data-before-after-range>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Before/after slider",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Before/after slider"},
    {"type": "text", "id": "subheading", "label": "Subheading"},
    {"type": "image_picker", "id": "before_image", "label": "Before image"},
    {"type": "image_picker", "id": "after_image", "label": "After image"}
  ],
  "presets": [
    {"name": "Before/after slider", "category": "Image"}
  ]
}
{% endschema %}
