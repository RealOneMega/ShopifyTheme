<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="description" content="{{ page_description | escape }}">
    <meta name="theme-color" content="{{ settings.color_accent }}">

    <title>
      {{ page_title }}
      {% if current_tags %} &ndash; {{ current_tags | join: ', ' }}{% endif %}
      {% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}
      {% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
    </title>

    <meta property="og:site_name" content="{{ shop.name }}">
    <meta property="og:url" content="{{ canonical_url }}">
    <meta property="og:title" content="{{ page_title | escape }}">
    <meta property="og:type" content="website">
    <meta property="og:description" content="{{ page_description | escape }}">
    {% if page_image %}
      <meta property="og:image" content="{{ page_image | image_url: width: 1200 }}">
    {% endif %}

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ page_title | escape }}">
    <meta name="twitter:description" content="{{ page_description | escape }}">
    {% if page_image %}
      <meta name="twitter:image" content="{{ page_image | image_url: width: 1200 }}">
    {% endif %}

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <style>
      {{ settings.font_body | font_face: font_display: 'swap' }}
      {{ settings.font_heading | font_face: font_display: 'swap' }}
    </style>
    <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">

    <style>
      :root {
        --font-body: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
        --font-heading: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
        --font-scale: {{ settings.font_scale }};
        --letter-spacing-heading: {{ settings.letter_spacing_heading }}em;
        --color-background: {{ settings.color_background }};
        --color-text: {{ settings.color_text }};
        --color-accent: {{ settings.color_accent }};
        --color-promo-bg: {{ settings.color_promo_bg }};
        --color-promo-text: {{ settings.color_promo_text }};
        --color-header-bg: {{ settings.color_header_bg }};
        --color-card-overlay: {{ settings.color_card_overlay | color_modify: 'alpha', 0.45 }};
        --color-button-primary-bg: {{ settings.color_button_primary_bg }};
        --color-button-primary-text: {{ settings.color_button_primary_text }};
        --color-button-secondary-bg: {{ settings.color_button_secondary_bg }};
        --color-button-secondary-text: {{ settings.color_button_secondary_text }};
        --color-button-tertiary-text: {{ settings.color_button_tertiary_text }};
        --section-padding-y: {{ settings.section_padding }}rem;
        --section-padding-y-mobile: {{ settings.section_padding_mobile }}rem;
        --radius-global: {{ settings.radius_global }}px;
        --shadow-card: {% if settings.shadow_cards %}0 12px 30px rgba(0,0,0,0.1){% else %}none{% endif %};
      }
    </style>

    {{ content_for_header }}

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "{{ shop.name | escape }}",
        "url": "{{ shop.url }}",
        "logo": "{{ settings.logo | image_url: width: 400 }}",
        "sameAs": [
          {% if settings.social_facebook != blank %}"{{ settings.social_facebook }}"{% endif %}
          {% if settings.social_instagram != blank %},"{{ settings.social_instagram }}"{% endif %}
          {% if settings.social_tiktok != blank %},"{{ settings.social_tiktok }}"{% endif %}
          {% if settings.social_twitter != blank %},"{{ settings.social_twitter }}"{% endif %}
        ]
      }
    </script>
  </head>
  <body>
    <div class="overlay" data-overlay></div>
    {% sections 'header-group' %}
    <main id="MainContent" role="main">
      {{ content_for_layout }}
    </main>
    {% section 'footer' %}

    {% section 'newsletter-popup' %}

    <script src="{{ 'theme.js' | asset_url }}" defer></script>
  </body>
</html>
